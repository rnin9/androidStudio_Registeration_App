<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".EstimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/estimationBackButton"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/colorBackground"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:fontFamily="@font/nexonlv"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingTop="5dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_comment_black_24dp"
            android:drawableLeft="@drawable/ic_comment_black_24dp"
            android:id="@+id/estimationListButton"
            android:fontFamily="@font/nexonlv"
            android:text="강의평 목록"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_create_black_24dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:id="@+id/estimationWritingButton"
            android:fontFamily="@font/nexonlv"
            android:text="새 강의평 작성"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"/>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/notice">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:id="@+id/estimationHeader"
                android:layout_marginTop="8dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소프트웨어 공학"
                    android:id="@+id/estimationTitle"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/ohsquare"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexonlv"
                    android:id="@+id/estimationProfessor"
                    android:text="이기훈교수님"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexonlv"
                    android:id="@+id/estimationMajor"
                    android:text="컴퓨터공학과"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:padding="10dp"/>
                </LinearLayout>

            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/estimationListView"
                android:layout_margin="10dp"
                android:dividerHeight="10dp"
                android:divider="@color/colorBackground"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragmentEstimate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>
</LinearLayout>